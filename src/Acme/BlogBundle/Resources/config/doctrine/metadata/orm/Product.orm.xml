<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Product" table="product">
    <indexes>
      <index name="FK_category_idx" columns="product_category_id"/>
    </indexes>
    <id name="productId" type="integer" column="product_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="productName" type="string" column="product_name" length="255" nullable="false"/>
    <many-to-one field="productCategory" target-entity="Category">
      <join-columns>
        <join-column name="product_category_id" referenced-column-name="category_id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
