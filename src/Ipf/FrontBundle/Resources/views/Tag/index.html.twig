{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tag list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Tagid</th>
                <th>Tagname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tag_show', { 'id': entity.tagId }) }}">{{ entity.tagId }}</a></td>
                <td>{{ entity.tagName }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tag_show', { 'id': entity.tagId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tag_edit', { 'id': entity.tagId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tag_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
