{% extends 'IpfFrontBundle:layout:layout.html.twig' %}

{% block sideCategory %}
    <div class="col-md-3">
        <p class="lead">Tout les produits</p>
        <div class="list-group">
            <a href="#" class="list-group-item">Search</a>
            <a href="{{path('userproduct')}}" class="list-group-item">Tous</a>
            {{ render(controller('IpfFrontBundle:Category:list')) }}
        </div>
    </div>
    <br/>
    <br/>
    <br/>
{% endblock %}
{% block body -%}
    <h1>Les 5 derniers produits Vendus</h1>
        <div class="col-md-9">
        <div class="row">
            {% if entities %}
                {% for entity in entities %}
                    
                    
                    {{ entity.userproductPrice }}
                    
                   
                        <div class="col-sm-4 col-lg-4 col-md-4">
                            <div id="thumb" class="thumbnail">
                                {% for picture in entity.userproductProduct.pictures %}
                                    {% if loop.index  < 2 %}
                                        <img src="{{ asset(picture.pictureUrl) }}" alt="">
                                    {% endif %}
                                {% endfor %}
                                <div class="caption">
                                    <h4 class="pull-right">â‚¬{{ entity.userproductPrice }}</h4>
                                    <h4>
                                        <a href="{{ path('userproduct_show', { 'id': entity.userproductId }) }}">{{ entity.userproductProduct.productName }}</a>
                                    </h4>
                                    <p>{{ entity.userproductDescription | slice(0, 60) }} ...</p>
                                </div>
                            </div>
                        </div>
                {% endfor %}
            {% else %}
                Aucuns produits !
            {% endif %}
        </div>
    </div>
{% endblock %}
