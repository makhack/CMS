{% block body -%}
    <div class="col-md-9">
        <div class="row">
            {% for entity in entities %}
                {% if  entity.userproductSold == false %}
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <img src="http://placehold.it/320x150" alt="">
                            <div class="caption">
                                <h4 class="pull-right">â‚¬{{ entity.userproductPrice }}</h4>
                                <h4>
                                    <a href="{{ path('userproduct_show', { 'id': entity.userproductId }) }}">{{ entity.userproductProduct.productName }}</a>
                                </h4>
                                <p>{{ entity.userproductDescription | slice(0, 60) }} ...</p>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
    {% endblock %}
   
