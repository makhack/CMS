{% extends 'IpfFrontBundle:layout:layout.html.twig' %}

{% block sideCategory %}
    <div class="col-md-3">
        <p class="lead">Tout les produits</p>
        <div class="list-group">
            <div class="list-group-item">
                <label>Recherche : </label>
                <input type="text" ng-model="search.text" ng-change="change()">
                <p>Par : </p>
                <div>
                    
                    <input type="checkbox" ng-model="search.isCategory" ng-init="search.isCategory=false">
                    <span> Categories </span>
                    
                </div>
                <div>
                    <input type="checkbox" ng-model="search.isTag" ng-init="search.isTag=false">
                    <span> Tag </span>
                </div>
            </div>
            <a href="{{path('userproduct')}}" class="list-group-item">Tous</a>
            {{ render(controller('IpfFrontBundle:Category:list')) }}
        </div>
    </div>
    <br/>
    <br/>
    <br/>
{% endblock %}
{% block body -%}
    <div ng-controller="searchCtrl">
        <div ng-bind-html="bonjour"></div>
        <div ng-if="!isSearching" class="col-md-9">
            <div class="row">
                {% if entities %}
                    {% for entity in entities %}
                        {% if  entity.userproductSold == false %}
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <div id="thumb" class="thumbnail">
                                    {% for picture in entity.userproductProduct.pictures %}
                                        {% if loop.index  < 2 %}
                                            <img src="{{ asset(picture.pictureUrl) }}" alt="">
                                        {% endif %}
                                    {% endfor %}
                                    <div class="caption">
                                        <h4 class="pull-right">â‚¬{{ entity.userproductPrice }}</h4>
                                        <h4>
                                            <a href="{{ path('userproduct_show', { 'id': entity.userproductId }) }}">{{ entity.userproductProduct.productName }}</a>
                                        </h4>
                                        <p>{{ entity.userproductDescription | slice(0, 60) }} ...</p>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% else %}
                    Aucuns produits !
                {% endif %}
            </div>
        </div>
    </div>
    {% endblock %}
   
